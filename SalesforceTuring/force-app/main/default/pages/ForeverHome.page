<apex:page controller="ForeverHome" sidebar="false" showHeader="false">
<h1>Forever Home</h1>
    <apex:outputPanel id="main">
        <apex:outputPanel rendered="{!state='registrationChoice'}">
            <h2>Register</h2>
            <apex:form>
                    <apex:commandButton 
                    action="{!redirectParentRegistration}" 
                    value="I am a Parent"
                    reRender="main" 
                    />
                    <apex:commandButton 
                    action="{!redirectChildRegistration}" 
                    value="I am a Child" 
                    reRender="main"
                    />
            </apex:form>
        </apex:outputPanel>

        <apex:outputPanel rendered="{!state='parentRegistration'}">
            <h2>Parent Registration</h2>
        </apex:outputPanel>

        <apex:outputPanel rendered="{!state='childRegistration'}">
            <h2>Child Registration</h2>
        </apex:outputPanel>

    </apex:outputPanel>
</apex:page>
